---
import Layout from '../layouts/Layout.astro';
import { fetchPhotos } from '../data/photos';
import type { Photo } from '../data/photos';

let photos: Photo[] = [];
try {
    photos = await fetchPhotos();
} catch (error) {
    console.error('Failed to fetch photos:', error);
}

const heroPhoto = 'https://pub-f1772f7581504cfaaa654ee125072d6a.r2.dev/gallery/Mom%20at%20Northwest%20Elem%20(2004).jpg'
---

<Layout title="Home" description="A beloved educator, mother, and adventurer who touched countless lives through her 32-year teaching career and unwavering dedication to family and community.">
    <main>
        <!-- Page Content-->
        <section class="hero-section" aria-labelledby="hero-title">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 align-items-center my-5">
                    <div class="col-lg-7">
                        <figure class="hero-figure">
                            <img 
                                class="img-fluid rounded mb-4 mb-lg-0"
                                width="300" 
                                height="400"
                                src={heroPhoto} 
                                alt="Rosemary Jenkins teaching at Northwest Elementary School in 2004" 
                                loading="lazy"
                            />
                            <figcaption class="sr-only">Rosemary Jenkins in her classroom at Northwest Elementary School, where she taught for many years</figcaption>
                        </figure>
                    </div>
                    <div class="col-lg-5">
                        <header>
                            <h1 id="hero-title" class="font-weight-light">In Memory of Rosemary Jenkins</h1>
                        </header>
                        <p class="lead">A beloved educator, mother, and adventurer who touched countless lives through her 32-year teaching career and unwavering dedication to family and community.</p>
                        <a class="btn btn-primary" href="/obituary" aria-label="Read Rosemary Jenkins' full story">Read Her Story</a>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Theme Cards -->
        <section class="themes-section" aria-labelledby="themes-title">
            <div class="container px-4 px-lg-5">
                <header class="text-center mb-5">
                    <h2 id="themes-title">Explore Her Life's Journey</h2>
                </header>
                <div class="row gx-4 gx-lg-5">
            <article class="col-md-4 mb-5">
                <div class="card h-100">
                    <img src="/images/education.jpg" class="card-img-top" alt="Rosemary Jenkins teaching in classroom" width="400" height="200" style="height: 200px; object-fit: cover;" loading="lazy" />
                    <div class="card-body">
                        <h3 class="card-title">Education</h3>
                        <p class="card-text">32 years of inspiring young minds at Northwest and Cypress Elementary, touching the lives of countless students through her creative and caring approach to teaching.</p>
                    </div>
                    <div class="card-footer"><a class="btn btn-primary btn-sm" href="/education" aria-label="Learn about Rosemary's teaching career">Learn More</a></div>
                </div>
            </article>
            <article class="col-md-4 mb-5">
                <div class="card h-100">
                    <img src="/images/family.jpg" class="card-img-top" alt="Rosemary Jenkins with her family" width="400" height="200" style="height: 200px; object-fit: cover;" loading="lazy" />
                    <div class="card-body">
                        <h3 class="card-title">Family</h3>
                        <p class="card-text">A loving mother to three sons and cherished grandmother to eight grandchildren, Rosemary's legacy lives on through the values and love she instilled in her family.</p>
                    </div>
                    <div class="card-footer"><a class="btn btn-primary btn-sm" href="/family" aria-label="Learn about Rosemary's family life">Learn More</a></div>
                </div>
            </article>
            <article class="col-md-4 mb-5">
                <div class="card h-100">
                    <img src="/images/adventure.jpg" class="card-img-top" alt="Rosemary Jenkins on outdoor adventures" width="400" height="200" style="height: 200px; object-fit: cover;" loading="lazy" />
                    <div class="card-body">
                        <h3 class="card-title">Adventure</h3>
                        <p class="card-text">From her college days in Colorado to visiting family across the country, Rosemary's spirit of adventure and creativity brought joy to all who knew her.</p>
                    </div>
                    <div class="card-footer"><a class="btn btn-primary btn-sm" href="/adventure" aria-label="Learn about Rosemary's adventures">Learn More</a></div>
                </div>
            </article>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>
