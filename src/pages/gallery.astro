---
import Layout from '../layouts/Layout.astro';
import { fetchPhotos, type Photo } from '../data/photos';

// Fetch photos using our updated function
const galleryPhotos = await fetchPhotos();

// Group photos by category
interface PhotosByCategory {
    [category: string]: Photo[];
}

const photosByCategory: PhotosByCategory = galleryPhotos.reduce((acc: PhotosByCategory, photo: Photo) => {
    const category = photo.fileName.split('-')[0]; // Example logic to determine category
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(photo);
    return acc;
}, {});

const categories = Object.keys(photosByCategory);

// Generate image schema for structured data
const imageSchema = galleryPhotos.map(photo => ({
    "@type": "ImageObject",
    "contentUrl": photo.url,
    "name": photo.fileName.replace(/\.[^/.]+$/, "").replace(/-/g, ' '),
    "description": `Photo of Rosemary Jenkins - ${photo.fileName.replace(/\.[^/.]+$/, "").replace(/-/g, ' ')}`,
    "uploadDate": photo.lastModified,
    "author": {
        "@type": "Person",
        "name": "Rosemary Jenkins Family"
    },
    "publisher": {
        "@type": "Organization",
        "name": "In Memory of Rosemary Jenkins",
        "url": "https://www.rosemarymemorial.org"
    }
}));
---

<Layout title="Gallery" description="Browse through cherished memories and photographs of Rosemary Jenkins' life, family, teaching career, and adventures that shaped her remarkable journey." image="/images/gallery-hero.jpg">
    
    <!-- Additional Image Schema for Gallery -->
    <script type="application/ld+json" slot="head">
    {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ImageGallery",
        "name": "Rosemary Jenkins Photo Gallery",
        "description": "A collection of photographs celebrating the life and memories of Rosemary Jenkins",
        "url": "https://www.rosemarymemorial.org/gallery",
        "about": {
            "@type": "Person",
            "name": "Rosemary Jenkins"
        },
        "mainEntity": {
            "@type": "ItemList",
            "itemListElement": imageSchema.map((image, index) => ({
                "@type": "ListItem",
                "position": index + 1,
                "item": image
            }))
        }
    }, null, 2)}
    </script>
    
    <div class="container px-4 px-lg-5 my-5">
        <h1 class="text-center mb-5">Photo Gallery</h1>
        
        {categories.length > 0 ? (
            categories.map(category => (
                <div class="mb-5">
                    <h2 class="text-capitalize mb-4">{category}</h2>
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                        {photosByCategory[category]?.map((photo: Photo) => (
                            <div class="col">
                                <a 
                                    href={`/gallery/${photo.fileName.replace(/\s+/g, '-')}`} 
                                    class="card h-100 text-decoration-none photo-card"
                                >
                                    <div class="image-container">
                                        <img 
                                            src={photo.url} 
                                            class="card-img-top" 
                                            alt={`Photo of Rosemary Jenkins - ${photo.fileName.replace(/\.[^/.]+$/, "").replace(/-/g, ' ')}`}
                                            title={`Rosemary Jenkins: ${photo.fileName.replace(/\.[^/.]+$/, "").replace(/-/g, ' ')}`}
                                            loading="lazy"
                                            width="400"
                                            height="300"
                                        />
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title text-truncate" title={photo.fileName.replace(/\.[^/.]+$/, "").replace(/-/g, ' ')}>{photo.fileName.replace(/\.[^/.]+$/, "").replace(/-/g, ' ')}</h5>
                                        <p class="card-text small text-muted">Category: {category}</p>
                                    </div>
                                </a>
                            </div>
                        ))}
                    </div>
                </div>
            ))
        ) : (
            <div class="alert alert-info text-center">
                <p>No photos found. Please make sure your R2 bucket is properly configured and contains images in the gallery/ folder.</p>
            </div>
        )}
    </div>
</Layout>

<style>
    .photo-card {
        transition: transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .photo-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0,0,0,0.1);
    }

    .image-container {
        width: 100%;
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .card-img-top {
        width: 200px;
        height: auto;
        object-fit: contain;
        max-height: 200px;
    }

    .card-body {
        flex: 1 1 auto;
        padding: 1rem;
    }

    .card-title {
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    /* Ensure responsive behavior */
    @media (max-width: 576px) {
        .row-cols-1 > .col {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }
</style>
